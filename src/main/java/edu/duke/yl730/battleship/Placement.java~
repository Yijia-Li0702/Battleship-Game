package edu.duke.yl730.battleship;

public class Placement {
  private final Coordinate where;
  private final char orientation;
  
  public Placement(Coordinate w, char o){
    where = w;
    orientation = o;
    }
  
  public Placement(String descr) {
    if (descr.length() != 3) {
      throw new IllegalArgumentException("Placement is illegal" + descr);
    }
    where = new Coordinate(descr);
    descr.toUpperCase();
    if(descr.charAt(2) != 'H' && descr.charAt(2)!='V'){
      throw new IllegalArgumentException("orientation is illegal" + descr);
    } else{
      orientation = descr.charAt(2);
    }
  }
  
  public char getOrientation() {
    return orientation;
  }
  
  public Coordinate getWhere() {
    return where;
  }
  @Override
  public boolean equals(Object o) {
    if (o.getClass().equals(getClass())) {
      Placement c = (Placement) o;
      return where == c.where && orientation == c.orientation;
    }
    return false;
  }
  @Override
  public String toString() {
    return where.toString() + " "+ orientation;
  }
  @Override
  public int hashCode() {
    return toString().hashCode();
  }
  
}
